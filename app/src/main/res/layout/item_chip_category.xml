<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="categoryData"
            type="com.bashirli.bootcamp8iyun.modul.category.CategoryResponseItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.chip.Chip
            android:layout_margin="5dp"
            android:id="@+id/chipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="@{categoryData.name}"
            android:textColor="@color/white"
            app:chipStrokeWidth="0dp"
            app:textStartPadding="30dp"
            android:clickable="true"
            app:rippleColor="@color/themeColor"
            app:textEndPadding="29dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </com.google.android.material.chip.Chip>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>